---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slugify }}/
---

{% set postslist = collections[ tag ] %}
{% if postslist | length > 0 %}
  {% include "postslist.njk" %}
{% endif %}

<p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
